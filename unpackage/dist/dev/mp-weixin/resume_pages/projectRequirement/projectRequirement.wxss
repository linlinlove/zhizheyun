.indexRequirement {
  padding: 0 20rpx;
  font-size: 28rpx;
}
.indexRequirement .border_data {
  padding: 0 20rpx;
}
.indexRequirement .border_data ._border {
  width: 100%;
  height: 1px;
  background-color: #D9D9D9;
}
.indexRequirement .list {
  color: #505050;
  background: #081738;
  margin-top: 20rpx;
  border-radius: 10px;
  color: #fff;
}
.indexRequirement .list .content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  color: #505050;
  padding-right: 5rpx;
}
.indexRequirement .list .content .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;
  padding-top: 10rpx;
}
.indexRequirement .list .content .avatar .image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.indexRequirement .list .content .center {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  margin-left: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.indexRequirement .list .content .center .top {
  font-size: 26rpx;
  font-size: 26rpx;
  margin: 10px 0;
  display: flex;
}
.indexRequirement .list .content .center .top .right {
  font-size: 28rpx;
  color: #BABABA;
  color: #FFFFFF;
}
.indexRequirement .list .content .center .top .left {
  flex: 1;
  color: #FFFFFF;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.indexRequirement .list .content .center .bottom {
  font-size: 28rpx;
  padding-left: 0;
}
.indexRequirement .list .content .center .bottom .right {
  font-size: 22rpx;
  color: #FFFFFF;
  max-width: 62px;
}
.indexRequirement .list .content .center .bottom .left {
  flex: 1;
  color: #FFFFFF;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.indexRequirement .list .content .right {
  color: #fff;
  font-size: 28rpx;
  margin-right: 15rpx;
}
.indexRequirement .list .bottom {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  padding-left: 20rpx;
  margin-top: 10rpx;
}
.indexRequirement .list .bottom .time {
  flex: 1;
  padding: 20rpx 0;
}
.indexRequirement .list .bottom .time .timeValue {
  color: #BABABA;
}
.indexRequirement .list .bottom .time .update {
  color: #157DFA;
  font-size: 28rpx;
}

